{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://accentrust.com/veclon/contracts/engine-manifest.schema.json",
  "title": "EngineManifest",
  "type": "object",
  "required": ["engine_id", "engine_name", "version", "command", "capabilities"],
  "properties": {
    "engine_id": { "type": "string", "pattern": "^[a-z0-9_-]+$" },
    "engine_name": { "type": "string" },
    "version": { "type": "string" },
    "license": { "type": "string" },
    "command": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "capabilities": {
      "type": "array",
      "items": { "type": "string", "enum": ["wgs", "rna", "longread"] }
    },
    "input_contract": { "type": "string" },
    "output_contract": { "type": "string" }
  },
  "additionalProperties": false
}
